{
    "$schema": "http://json-schema.org/draft-07/schema",
    "type": "object",
    "title": "User",
    "description": "The User",

    "required": [
        "email",
        "name",
        "password"
    ],
    "properties": {
        "id": {
            "$id": "#/properties/id",
            "type": "integer",
            "title": "The database id of user"
        },
        "email": {
            "$id": "#/properties/email",
            "type": "string",
            "title": "The users email. Must be unique.",
            "examples": [
                "tivotrix@gmail.com"
            ]
        },
        "name": {
            "$id": "#/properties/name",
            "type": "string",
            "title": "Users name",
            "examples": [
                "TiVo"
            ]
        },
        "password": {
            "$id": "#/properties/password",
            "type": "string",
            "title": "Users hashed password"
        },
        "created_at": {
            "$id": "#/properties/created_at",
            "type": "string",
            "title": "The creation date of user"

        },
        "updated_at": {
            "$id": "#/properties/updated_at",
            "type": "string",
            "title": "The date user updated last"
        }
    },
    "additionalProperties": false
}